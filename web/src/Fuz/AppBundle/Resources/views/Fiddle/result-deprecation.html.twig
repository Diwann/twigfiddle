{% set length = data.result.deprecations|length %}
{% if length %}

    <div class="form-group result-box result-container">
        <div class="row">
            <div class="col-md-12">

                {# Error #}
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon deprecation-highlight"><img src="{{ asset('bundles/fuzapp/img/flags/yellow.gif') }}" alt="{{ 'yellow'|title }} Flag" class="flag"/>Deprecation Notice{{ length > 1 ? 's' : '' }}</div>
                    </div>
                </div>

                <div class="clearfix"></div>

                <table class="table table-striped table-bordered">
                    {% for key, deprecation in data.result.deprecations %}

                        <tr>
                            <td>#{{ (key + 1) }}</td>
                            <td>
                                {{ deprecation.message|hide_project_path }}
                            </td>
                            <td>
                                Triggered in {{ deprecation.file|hide_project_path }} line {{ deprecation.line }}
                            </td>
                        </tr>

                    {% endfor %}
                </table>
            </div>
        </div>
    </div>

{% endif %}