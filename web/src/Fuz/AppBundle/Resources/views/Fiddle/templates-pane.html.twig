{# FuzAppBundle:Fiddle:templates-pane.html.twig #}

{% form_theme fiddleForm.templates 'FuzAppBundle:Fiddle:templates-theme.html.twig' %}

<div id="templates" data-prototype="{{ form_widget(fiddleForm.templates.vars.prototype)|e('html_attr') }}">
    {% for template in fiddleForm.templates %}
        {{ form_widget(template) }}
    {% endfor %}
</div>

{# Add template button #}
<div align="right" id="add-template">
    <button class="btn btn-default btn-sm add-template" type="button">
        <span class="glyphicon glyphicon glyphicon-plus"></span>
        <span>Add a template</span>
    </button>
</div>
