{% form_theme form.templates 'FuzAppBundle:Fiddle:templates-theme.html.twig' %}

<div id="templates" data-prototype="{{ form_widget(form.templates.vars.prototype)|e('html_attr') }}">
    {% for template in form.templates %}
        {{ form_widget(template) }}
    {% endfor %}
</div>

{# Add template button #}
<div align="right" id="add-template">
    <button
        title="Click here if you need to create another template"
        class="btn btn-default btn-sm add-template"
        type="button">
        <span class="glyphicon glyphicon glyphicon-plus"></span>
        <span>Add a template</span>
    </button>
</div>
