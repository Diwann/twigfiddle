{# FuzAppBundle:Fiddle:templates-theme.html.twig #}
{# Used by: form_widget(template) in: FuzAppBundle:Fiddle:templates.html.twig #}

{% block FiddleTemplateType_label %}{% endblock %}
{% block FiddleTemplateType_errors %}{% endblock %}

{% block FiddleTemplateType_widget %}
{% spaceless %}
<div id="row-{{ form.content.vars.id }}" class="template" data-id="{{ form.content.vars.id }}">
    <div class="form-group">
        <div class="row">
            <div class="filename-template-div col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">File</div>
                        {{ form_widget(form.filename) }}
                    </div>
                    <div class="error-container" id="errors-{{ form.filename.vars.id }}">{{ form_errors(form.filename) }}</div>
                </div>
            </div>
            <div class="main-template-div col-md-3 col-sm-3  col-xs-8 text-center hide">
               <button class="btn {% if form.isMain.vars.data %}btn-tf-green{% else %}btn-default{% endif %} btn-sm btn-twigfiddle main-template" data-id="{{ form.content.vars.id }}" type="button">
                   <span class="glyphicon {% if form.isMain.vars.data %}glyphicon-check{% else %}glyphicon-unchecked{% endif %}"></span> Set as main template
               </button>
            </div>
            <div class="delete-template-div col-md-2 col-sm-2  col-xs-4 text-right hide">
                <button class="btn btn-default btn-sm btn-twigfiddle delete-template" data-id="{{ form.content.vars.id }}" type="button">
                    <span class="glyphicon glyphicon-trash"></span>
                </button>
            </div>
        </div>
        <div class="hide">
            {{ form_widget(form.isMain) }}
        </div>
         {{
            form_widget(form.content, {
                'attr': {
                    'class': 'codemirror-template',
                    'placeholder': 'Type your Twig template here...',
                },
            })
         }}
         <div class="error-container" id="errors-{{ form.content.vars.id }}">{{ form_errors(form.content) }}</div>
    </div>
</div>
{% endspaceless %}
{% endblock %}
