{# FuzAppBundle:Fiddle:templates-theme.html.twig #}

{% block FiddleTemplateType_label %}{% endblock %}
{% block FiddleTemplateType_errors %}{% endblock %}

{% block FiddleTemplateType_widget %}
{% spaceless %}
<div id="row-{{ form.content.vars.id }}" class="template" data-id="{{ form.content.vars.id }}">
    <div class="form-group">
        <div class="row">
            <div class="col-md-7 col-sm-7 col-xs-7">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-addon">File</div>
                        {{ form_widget(form.filename) }}
                    </div>
                    <div id="errors-{{ form.filename.vars.id }}">{{ form_errors(form.filename) }}</div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3  col-xs-3 text-center">
               <button class="btn {% if form.isMain.vars.data %}btn-primary{% else %}btn-default{% endif %} btn-sm btn-twigfiddle main-template hide" data-id="{{ form.content.vars.id }}" type="button">
                   <span class="glyphicon glyphicon {% if form.isMain.vars.data %}glyphicon-check{% else %}glyphicon-unchecked{% endif %}"></span> Set as main template
               </button>
            </div>
            <div class="col-md-2 col-sm-2  col-xs-2 text-right">
                <button class="btn btn-default btn-sm btn-twigfiddle delete-template hide" data-id="{{ form.content.vars.id }}" type="button">
                    <span class="glyphicon glyphicon glyphicon-trash"></span>
                </button>
            </div>
        </div>
        <div class="hide">
            {{ form_widget(form.isMain) }}{# {{ dump(form.isMain.vars.data) }} #}
        </div>
         {{
            form_widget(form.content, {
                'attr': {
                    'class': 'codemirror-template',
                },
            })
         }}
         <div id="errors-{{ form.content.vars.id }}">{{ form_errors(form.content) }}</div>
    </div>
</div>
{% endspaceless %}
{% endblock %}
