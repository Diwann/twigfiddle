{# FuzAppBundle:Fiddle:favorite.html.twig #}
{# Included by: FuzAppBundle:Fiddle:index.html.twig #}

{% if is_granted('ROLE_USER') and data.id and app.user != data.user %}

    <button
        id="favorite"
        type="button"
        class="btn btn-tf-dark domajax click"
        data-endpoint="{{ path('fav_fiddle', {'hash': hash, 'revision': revision}) }}"
        data-input=".favorite-input"
        data-callback-success="processFavFiddleResponse"
        data-lock=""
    >
        <span class="glyphicon glyphicon {% if isFavorite %}glyphicon-star{% else %}glyphicon-star-empty{% endif %}"></span>
    </button>

{% endif %}
