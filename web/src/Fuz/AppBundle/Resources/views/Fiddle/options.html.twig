<a
    href="#"
    title="You can open samples in new tab to get started with twigfiddle"
    class="white"
    data-toggle="modal"
    data-target="#options-modal">More options...</a>

{% set body %}

    <div class="text-left">

        {# C extension #}
        <div class="checkbox">
            <label>
                {{ form_widget(form.withCExtension) }} Enable the C extension (optimizes <code>Twig_Template::getAttribute()</code>'s perfs)
            </label>
        </div>
        <div class="error-container" id="errors-{{ form.withCExtension.vars.id }}">{{ form_errors(form.withCExtension) }}</div>

        {# Non-native extensions #}
        

    </div>

{% endset %}

{{ macros.modal('options-modal', 'Other options', body) }}



